{
    "name": "rvvup/sdk",
    "description": "Rvvup payments SDK",
    "license": "MIT",
    "type": "library",
    "minimum-stability": "dev",
    "suggest": {
        "guzzlehttp/guzzle": ">=6"
    },
    "require": {
        "psr/http-client": "^1",
        "ext-curl": "*",
        "ext-json": "*",
        "php": "^7.3 || ^8.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "dev-master",
        "phpstan/phpstan": "^1.7",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Rvvup\\Sdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rvvup\\Sdk\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
